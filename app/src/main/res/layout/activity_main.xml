<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/music_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvRadioStation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_five" />


            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/thirty" />


            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/twenty"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/buttonStopPlay"
                        android:layout_width="@dimen/ninty"
                        android:layout_height="@dimen/ninty"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pause" />

                    <ImageButton
                        android:id="@+id/buttonPlay"
                        android:layout_width="@dimen/ninty"
                        android:layout_height="@dimen/ninty"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_play" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center">


                    <ImageButton
                        android:id="@+id/btnStop"
                        android:layout_width="@dimen/ninty"
                        android:layout_height="@dimen/ninty"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_stop_record" />


                    <ImageButton
                        android:id="@+id/btnStart"
                        android:layout_width="@dimen/ninty"
                        android:layout_height="@dimen/ninty"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_record" />


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ExpandableListView
        android:id="@+id/simpleExpandableListView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />


</android.support.v4.widget.DrawerLayout>